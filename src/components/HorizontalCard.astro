---
const { title, img, desc, url, badge, tag, target = "_blank" } = Astro.props;
---

<div
	class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[101%] group">
	<a href={url} target={target}>
		<div class="hero-content flex-col md:flex-row">
			<img
				src={img}
				alt={title}
				class="max-w-full md:max-w-[13rem] rounded-lg"
			/>
			<div class="grow w-full">
				<h1 class="text-xl font-bold">
					{title}
				</h1>
				<p class="py-1 text-1xl">{desc}</p>
				<div class="card-actions justify-end gap-2">
					{
						tag &&
							tag.map((tag: any) => (
								<div class="badge badge-outline group-hover:badge">{tag}</div>
							))
					}
				</div>
			</div>
		</div>
	</a>
</div>
