---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE } from "../config";
export interface Props {
  title?: string;
  description?: string;
  image?: any;
  showHeader?: boolean;
  showFooter?: boolean;
  useDefault?: boolean;
  CMS?: string;
}
const {
  title = SITE_TITLE,
  description = "",
  image,
  showHeader = true,
  showFooter = true,
  useDefault = true,
  CMS,
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <!-- <script src={CMS}></script> -->
  </head>
  <body>
    <Header title={SITE_TITLE} show={showHeader} />
    <div class={useDefault ? "pt-20 max-w-[max(75%,28rem)] mx-auto" : ""}>
      <slot />
    </div>
    <Footer show={showFooter} />
  </body>
</html>
