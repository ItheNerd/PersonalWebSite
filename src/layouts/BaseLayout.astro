---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE } from "../config";
export interface Props {
  title?: string;
  description?: string;
  image?: any;
  showHeader?: boolean;
  showFooter?: boolean;
  useDefault?: boolean;
  CMS?: string;
}
const {
  title = SITE_TITLE,
  description = "",
  image,
  showHeader = true,
  showFooter = true,
  useDefault = true,
  CMS,
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <!-- <script src={CMS}></script> -->
  </head>
  <input type="checkbox" id="my_modal_6" class="modal-toggle" />
  <div class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Hello !</h3>
      <p class="py-4">
        This website is currently under active development and may not be fully
        functional. Feel free to explore, and if you encounter any problems or
        have feedback, please let me know
      </p>
      <p>Thank you üòÅ</p>
      <div class="modal-action">
        <label for="my_modal_6" class="btn">Close!</label>
      </div>
    </div>
  </div>
  <body>
    <Header title={SITE_TITLE} show={showHeader} />
    <div
      class={useDefault
        ? "pt-20 max-w-[max(80%,30rem)] mx-auto px-6 sm:px-0"
        : ""}>
      <slot />
    </div>
    <Footer show={showFooter} />
  </body>
  <script>
    const checkbox = document.getElementById("my_modal_6");
    checkbox.checked = false;
    if (window.location.pathname === "/") {
      setTimeout(function () {
        checkbox.checked = true;
      }, 2700);
    }
  </script>
</html>
